@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="CustomerController" ng-init="initCustomers()" class="container" style="padding-top:50px">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <span class="btn-group pull-right ">
                <a ng-click="openCustomerModal(customer)" class="btn btn-default pull-right">
                    Add New Customer
                </a>
            </span>
            
        </div>
        <div class="panel-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            FirstName
                        </th>
                        <th>
                            MiddleName
                        </th>
                        <th>
                            LastName
                        </th>
                        <th>
                            DateOfBirth
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="customer in customers">
                        <td>
                            {{customer.FirstName}}
                        </td>
                        <td>
                            {{customer.MiddleName}}
                        </td>
                        <td>
                            {{customer.LastName}}
                        </td>
                        <td>
                            {{customer.DateOfBirth | date:'MM/dd/yyyy'}}
                        </td>
                        <td>
                            <button type="button" class="btn btn-info" ng-click="openCustomerModal(customer)">Edit</button>
                            <button type="button" class="btn btn-danger" ng-click="deleteCustomer(customer)">Delete</button>
                        </td>
                    </tr>
                </tbody>

            </table>
        </div>
    </div>
</div>
<script type="text/ng-template" id="stackedModal.html">
    <form  id="saveForm" ng-submit="saveCustomer()">
        <div class="panel panel-success">
            <div class="panel-heading">
                <label ng-if="!customer.Id || customer.Id == 0">Create</label>
                <label ng-if="customer.Id > 0">Update</label>
                <button type="button" class="close" data-dismiss="modal" ng-click="cancel()">&times;</button>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" ng-model="customer.FirstName" required
                                   oninvalid="this.setCustomValidity('Please Enter Name')"
                                   oninput="setCustomValidity('')"
                                   class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Middle Name</label>
                            <input type="text" ng-model="customer.MiddleName" required
                                   oninvalid="this.setCustomValidity('Please Enter Middle Name')"
                                   oninput="setCustomValidity('')"
                                   class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" ng-model="customer.LastName" required
                                   oninvalid="this.setCustomValidity('Please Enter Middle Name')"
                                   oninput="setCustomValidity('')"
                                   class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Date Of Birth</label>
                            <datepicker>
                                <input ng-model="customer.DateOfBirth" type="date" class="form-control" />
                            </datepicker>
                        </div>

                        <div class="form-group">
                            <label>Civil Id</label>
                            <input type="text" ng-model="customer.CivilId" required
                                   oninvalid="this.setCustomValidity('Please Enter Civil Id')"
                                   oninput="setCustomValidity('')"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Mobile Number</label>
                            <input type="text" ng-model="customer.MobileNumber"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Telephone Number</label>
                            <input type="text" ng-model="customer.TelephoneNumber"
                                   class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" ng-model="customer.Email" required
                                   oninvalid="this.setCustomValidity('Please Enter Email')"
                                   oninput="setCustomValidity('')"
                                   class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
         
                        <div class="form-group">
                            <label>Facebook</label>
                            <input type="text" ng-model="customer.Facebook"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Snapchat</label>
                            <input type="text" ng-model="customer.Snapchat"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Twitter</label>
                            <input type="text" ng-model="customer.Twitter"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" ng-model="customer.Address"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Nationality</label>
                            <input type="text" ng-model="customer.Nationality"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Attachment</label>
                            <input type="file" ng-model="customer.Attachment"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Preferred Contact Method</label>
                            <input type="text" ng-model="customer.PreferredContactMethod"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Preferred Contact Method</label>
                            <input type="text" ng-model="customer.Gender"
                                   class="form-control" />
                        </div>

                    </div>
                </div>          
                <div class="form-group pull-right modal-footer">
                    <input type="button" value="Close" class="btn btn-warning" ng-click="cancel()" />
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</script>